@inherits DeckBase

<div class="deck" ondragover="event.preventDefault();" @ondrop="@this.HandleDeckDrop">

    @foreach (var card in this.cards)
    {
        <Card CardModel="card" Parent="@this" Draggable="@this.PickingCardsValidator.Validate(this.cards, card)" />
    }
</div>

@code {
     public async Task HandleDeckDrop() {

        if (this.cards.Any())
        {
            return;
        }

        await base.HandleDrop();
    }
}